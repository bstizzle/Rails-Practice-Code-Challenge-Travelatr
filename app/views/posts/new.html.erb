<h1>New Post Form</h1>

<% if flash[:my_errors] %>
<ul>
    <%= flash[:my_errors].each do |error| %>
    <li><%= error %>
    <% end %>
</ul>
<% end %>

<%= form_for @post do |f| %>
 <label>Blogger:</label>
 <%= f.collection_select :blogger_id, Blogger.all, :id, :name %>
 <br><br>
 <label>Destination:</label>
 <%= f.collection_select :destination_id, Destination.all, :id, :name %>
 <br><br>
 <label>Title:</label>
 <%= f.text_field :title %>
 <br><br>
 <label>Content:</label>
 <%= f.text_field :content %>

 <%= f.submit %>
<% end %>